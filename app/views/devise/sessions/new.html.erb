<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h1 class="label is-large">Log in</h1>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="control">
          <div class="field">
            <%= f.input :email, wrapper: false, required: false, label_html: {class: 'label'}, input_html: { class: "input" } %>
          </div>
        </div>

        <div class="control">
          <div class="field">
            <%= f.input :password, required: false, label_html: {class: 'label'}, wrapper: false, input_html: { class: "input" } %>
          </div>
        </div>
        <br>

        <div class="control">
          <div class="field">
            <%= f.button :submit, "Log in", class: 'button is-info' %>
          </div>
        </div>

        <div class="control">
          <div class="field">
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
        </div>

      <% end %>
      <hr class="dropdown-divider">

      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
