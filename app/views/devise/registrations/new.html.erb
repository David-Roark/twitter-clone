<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
        <div class="label is-large">Sign up</div>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="control">
          <div class="field">
            <%= f.input :name, require: true, wrapper: false, input_html: {class: 'input'}, label_html: {class: 'label'} %>
          </div>
        </div>
        <div class="control">
          <div class="field">
            <%= f.input :username, require: true, wrapper: false, input_html: {class: 'input'}, label_html: {class: 'label'} %>
          </div>
        </div>
        <div class="control">
          <div class="field">
            <%= f.input :email, required: true, wrapper: false, input_html: {class: 'input'}, label_html: {class: 'label'} %>
          </div>
        </div>
        <div class="control">
          <div class="field">
            <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum " if @minimum_password_length), wrapper: false, input_html: {class: 'input'}, label_html: {class: 'label'} %>

          </div>
        </div>
        <div class="control">
          <div class="field">
            <%= f.input :password_confirmation, required: true, wrapper: false, input_html: {class: 'input'}, label_html: {class: 'label'} %>

          </div>
        </div>
        <br>
        <div class="control">
          <div class="field">
            <%= f.button :submit, "Sign up", class: 'button is-info' %>

          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
