<div class="section">
  <div class="container">
    <h1 class='label'>New Tweet</h1>

    <div class="box">
      <%= simple_form_for @tweet do |f| %>
      <%= f.error_notification %>
      <div class="field">
        <div class="control">
          <%= f.input :tweet, label: 'Tweet about it', input_html: { class: 'textarea is-medium' }, wrapper: false, label_html: { class: 'label' }, placeholder: 'Compose a new tweet...' %>
        </div>
      </div>

      <%= f.button :submit, class: 'button is-info' %>
      <% end %>
    </div>

    <%= link_to 'Back', tweets_path %>
  </div>
</div>
