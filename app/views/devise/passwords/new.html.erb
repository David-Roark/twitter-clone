<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
        <div class="title is-large">Forgot your password?</div>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
        <div class="control">
          <div class="field">
            <%= f.input :email, required: true, autofocus: true, wrapper: false, label_html: { class: 'label' }, input_html: { class: 'input' } %>
          </div>
        </div><br>
        <div class="control">
          <div class="field">
            <%= f.button :submit, "Send me reset password instructions", class: 'button is-info' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
